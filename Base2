def analyze_numbers(numbers):
    """
    This code will take in a tuple of numbers and then evaluate then for their total sum, average, largest, smallest, evens
    odds, then print all of them, labelled.
    """
    total = sum(numbers)
    avg = total 
    avg = avg / len(numbers) if numbers else 0
    smallest = min(numbers) if numbers else None
    largest = max(numbers) if numbers else None
    evens = len([n for n in numbers if n % 2 == 0])
    odds = len(numbers) - evens
    print("Total:", total)
    print("Average:", avg)
    print("Min:", smallest, "Max:", largest)
    print("Evens:", evens, "Odds:", odds)
    print("shudong is a cutie hunk")
a, b, c = 0, 0, 0
analyze_numbers([a,b,c])
